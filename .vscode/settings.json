{
    "prettier.semi": false,
    "prettier.printWidth": 100,
    "eslint.options": {
        "configFile": ".eslintrc.js"
    },
    "javascript.validate.enable": false,
    "git.ignoreLimitWarning": true,
    "files.autoSave": "afterDelay",
    "flow.pathToFlow": "${workspaceRoot}",
